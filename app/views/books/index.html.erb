<div class="book-wrap">
<% @books.each do |book| %>
 <div class="list-comment">
      <span class="list-body"><%= book.body %></span>
      <span class="list-title"><%=link_to book.title %></span>
 </div>

<% end %>

<h2>New Book</h2>

<%= form_with model: @book, url: books_path, method: :post do |f| %>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_area :body %>

<%= f.submit 'Create Book' %>
<% end %>